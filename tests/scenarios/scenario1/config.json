      "type": "grid",
      "name": "grid_connection",
      "import_price": "sensor.home_general_price",
      "export_price": "sensor.home_feed_in_price",
      "import_limit": 10000,
      "export_limit": 5000
    },
    "constant_load": {
      "type": "constant_load",
      "name": "constant_load",
      "power": 1000
    },
    "battery_to_dc_net": {
      "type": "connection",
      "name": "battery_to_dc_net",
      "source": "battery",
      "target": "dc_net"
    },
    "solar_to_dc_net": {
      "type": "connection",
      "name": "solar_to_dc_net",
      "source": "solar_generator",
      "target": "dc_net"
    },
    "ac_net_to_dc_net": {
      "type": "connection",
      "name": "ac_net_to_dc_net",
      "source": "ac_net",
      "target": "dc_net"
    },
    "grid_to_ac_net": {
      "type": "connection",
      "name": "grid_to_ac_net",
